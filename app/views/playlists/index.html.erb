<h1>Your playlists</h1>


<% if @playlists.count >= 1 %>
  <ul class="info-bar clearfix">
  <li><%= link_to "Add a movies to your playlists.", root_path, {:class => 'big_button f-left' } %></li>
  <li><%= link_to 'New Playlist', new_playlist_path, {:class => 'big_button f-left' }%></li>
<% else %>
  <ul class="info-bar small clearfix">
  <li><%= link_to 'New Playlist', new_playlist_path, {:class => 'big_button f-left' }%></li>
<% end %>
</ul>
  <div class="playlist-container clearfix">
    <% @playlists.each do |playlist| %>
      <div class="playlist">
        <%= link_to(playlist) do %>
          <h3 class="playlist-title"><%= playlist.title %></h3>
          <span class="img-play"> </span>
        <% end %>
        <%= link_to 'Edit', edit_playlist_path(playlist) %> |
        <%= link_to 'Delete', playlist, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
  </div>

<br>
